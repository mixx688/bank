
@{
    ViewBag.Title = "Login";
}

<h2>登入</h2>
@using (Html.BeginForm())
{
    <div>
        @Html.Label("帳號:")
        <input type="text" name="LoginUsername" required />
        <br />
        @Html.Label("密碼:")
        <input type="password" name="LoginPassword" required />
        <br />
    </div>
    @Html.ActionLink("新增帳戶", "Create", "Accounts")
    <br />
    <input type="submit" value="登入" />
    @ViewBag.message
}

